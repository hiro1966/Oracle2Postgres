{
  "DatabaseSettings": {
    "OracleOdbcConnectionString": "Driver={Oracle in OraClient19Home1};Dbq=//localhost:1521/ORCL;Uid=your_oracle_user;Pwd=your_oracle_password;",
    "PostgresConnectionString": "Host=localhost;Port=5432;Database=your_database;Username=your_postgres_user;Password=your_postgres_password;",
    "BatchSize": 1000
  },
  "PostgresServers": {
    "dashboard": {
      "Name": "dashbord",
      "Group": "Servers",
      "Host": "localhost",
      "Port": 5432,
      "MaintenanceDB": "hospital_db",
      "Username": "hospital_user",
      "Password": "your_password_here",
      "ConnectionParameters": {
        "SslMode": "prefer",
        "ConnectTimeout": 10
      }
    }
  },
  "DataTransferTasks": [
    {
      "TaskName": "部門マスタ転送",
      "OracleQuery": "SELECT ID, CODE, NAME, DISPLAY_ORDER, CREATED_AT FROM ORACLE_DEPARTMENTS",
      "PostgresTableName": "departments",
      "PostgresServerKey": "dashboard",
      "EnableTransform": false
    },
    {
      "TaskName": "医師マスタ転送",
      "OracleQuery": "SELECT CODE, NAME, DEPARTMENT_CODE, DISPLAY_ORDER, CREATED_AT FROM ORACLE_DOCTORS",
      "PostgresTableName": "doctors",
      "PostgresServerKey": "dashboard",
      "EnableTransform": false
    },
    {
      "TaskName": "病棟マスタ転送",
      "OracleQuery": "SELECT ID, CODE, NAME, CAPACITY, DISPLAY_ORDER, CREATED_AT FROM ORACLE_WARDS",
      "PostgresTableName": "wards",
      "PostgresServerKey": "dashboard",
      "EnableTransform": false
    },
    {
      "TaskName": "スタッフマスタ転送",
      "OracleQuery": "SELECT ID, NAME, JOB_TYPE_CODE, CREATED_AT FROM ORACLE_STAFF",
      "PostgresTableName": "staff",
      "PostgresServerKey": "dashboard",
      "EnableTransform": false
    },
    {
      "TaskName": "権限マスタ転送",
      "OracleQuery": "SELECT JOB_TYPE_CODE, JOB_TYPE_NAME, LEVEL FROM ORACLE_PERMISSIONS",
      "PostgresTableName": "permissions",
      "PostgresServerKey": "dashboard",
      "EnableTransform": false
    },
    {
      "TaskName": "外来実績転送",
      "OracleQuery": "SELECT ID, DATE, DEPARTMENT_ID, NEW_PATIENTS_COUNT, RETURNING_PATIENTS_COUNT, CREATED_AT FROM ORACLE_OUTPATIENT_RECORDS",
      "PostgresTableName": "outpatient_records",
      "PostgresServerKey": "dashboard",
      "EnableTransform": false
    },
    {
      "TaskName": "入院実績転送",
      "OracleQuery": "SELECT ID, DATE, WARD_ID, DEPARTMENT_ID, CURRENT_PATIENT_COUNT, NEW_ADMISSION_COUNT, DISCHARGE_COUNT, TRANSFER_OUT_COUNT, TRANSFER_IN_COUNT, CREATED_AT FROM ORACLE_INPATIENT_RECORDS",
      "PostgresTableName": "inpatient_records",
      "PostgresServerKey": "dashboard",
      "EnableTransform": false
    },
    {
      "TaskName": "売上データ転送",
      "OracleQuery": "SELECT DOCTOR_CODE, YEAR_MONTH, OUTPATIENT_SALES, INPATIENT_SALES, UPDATED_AT FROM ORACLE_SALES",
      "PostgresTableName": "sales",
      "PostgresServerKey": "dashboard",
      "EnableTransform": false
    },
    {
      "TaskName": "メッセージ転送",
      "OracleQuery": "SELECT ID, CONTENT, CREATED_AT FROM ORACLE_MESSAGES",
      "PostgresTableName": "messages",
      "PostgresServerKey": "dashboard",
      "EnableTransform": false
    }
  ],
  "Logging": {
    "LogFilePath": "Logs/app-{Date}.log",
    "MinimumLevel": "Information"
  },
  "AppSettings": {
    "AutoCloseOnCompletion": true,
    "CloseDelaySeconds": 3
  }
}
