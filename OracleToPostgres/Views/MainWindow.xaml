<Window x:Class="OracleToPostgres.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        Title="Oracle to PostgreSQL Data Transfer" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="250"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- タイトル -->
        <TextBlock Grid.Row="0" 
                   Text="Oracle → PostgreSQL データ転送"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#333"
                   Margin="0,0,0,20"/>

        <!-- ステータス表示 -->
        <Border Grid.Row="1" 
                Background="White"
                BorderBrush="#DDD"
                BorderThickness="1"
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="{Binding StatusMessage}"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#2196F3"
                           Margin="0,0,0,10"/>

                <ProgressBar Grid.Row="1"
                             Height="30"
                             Value="{Binding ProgressPercentage, Mode=OneWay}"
                             Minimum="0"
                             Maximum="100"
                             Margin="0,0,0,10"/>

                <TextBlock Grid.Row="2"
                           FontSize="14"
                           Foreground="#666">
                    <Run Text="処理済み: "/>
                    <Run Text="{Binding ProcessedRecords}" FontWeight="Bold"/>
                    <Run Text=" / "/>
                    <Run Text="{Binding TotalRecords}" FontWeight="Bold"/>
                    <Run Text=" 件 ("/>
                    <Run Text="{Binding ProgressPercentage, Mode=OneWay, StringFormat={}{0:F1}}"/>
                    <Run Text="%)"/>
                </TextBlock>
            </Grid>
        </Border>

        <!-- グラフ表示 -->
        <Border Grid.Row="2"
                Background="White"
                BorderBrush="#DDD"
                BorderThickness="1"
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="進捗グラフ"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#333"
                           Margin="0,0,0,10"/>

                <lvc:CartesianChart Grid.Row="1" 
                                    Series="{Binding Series}"
                                    LegendPosition="Hidden"/>
            </Grid>
        </Border>

        <!-- ログ表示 -->
        <Border Grid.Row="3"
                Background="White"
                BorderBrush="#DDD"
                BorderThickness="1"
                CornerRadius="5"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="実行ログ"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#333"
                           Margin="0,0,0,10"/>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              Background="#FAFAFA">
                    <ItemsControl ItemsSource="{Binding LogMessages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" 
                                           FontFamily="Consolas"
                                           FontSize="12"
                                           Foreground="#444"
                                           Margin="5,2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
